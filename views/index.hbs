<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input id="input" type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類、地址"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button" required>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- all restaurants --}}
{{#if restaurants}}
<div class="container mt-5">
  <div class="row mb-2">
    {{#if keyword}}
    {{else}}
    <div class="col-md-10 col-12 mx-auto">
      <a href="./restaurants/new" class="btn btn-success">新增口袋餐廳</a>
    </div>
    {{/if}}
  </div>
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{!-- Iterate the restaurantInfo array --}}
        {{#each restaurants}}
        <a href="./restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="row justify-content-center m-0 px-1 pt-0 pb-2">
              <div class="col text-center align-self-center">
                <a href="./restaurants/{{this._id}}/edit" class="text-secondary">
                  <i class="far fa-edit fa-2x"></i>
                </a>
              </div>
              <div class="col text-center align-self-center">
                <a href="./restaurants/{{this._id}}" class="text-info">
                  <i class="fas fa-info-circle fa-2x"></i>
                </a>
              </div>

              <form id="delete-restaurant" class="col" action="./restaurants/{{this._id}}/delete" method="POST">
                <button type="submit" class="text-danger" style="border: none; background: #fff;">
                  <i class="far fa-trash-alt fa-2x"></i>
                </button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="container mt-5 d-flex justify-content-center">
  <h6>Oops, no results found! 擴增口袋名單中~</h6>
</div>
{{/if}}